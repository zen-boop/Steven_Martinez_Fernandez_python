class Universidad:
    def __init__(self, nombre):
        self.nombre = nombre
class Carrera:
    def __init__(self, especialidad):
        self.especialidad = especialidad
class Estudiante(Universidad, Carrera):
    def __init__(self, nombre, edad, universidad, especialidad):
        Universidad.__init__(self, universidad)
        Carrera.__init__(self, especialidad)
        self.nombre = nombre
        self.edad = edad
    def datos(self):
        print(f"El nombre del estudiante es {self.nombre}, tiene {self.edad} aÃ±os, su especialidad es {self.especialidad}. Estudia en la Universidad {self.nombre}")
estudiantes = []
for i in range(3):  
    nombre = input(f"Introduce el nombre del estudiante {i+1}: ")
    edad = int(input(f"Introduce la edad de {nombre}: "))
    universidad = input(f"Introduce la universidad donde estudia {nombre}: ")
    especialidad = input(f"Introduce la especialidad de {nombre}: ")
    estudiante = Estudiante(nombre, edad, universidad, especialidad)
    estudiantes.append(estudiante)
for estudiante in estudiantes:
    estudiante.datos()
    print()  
