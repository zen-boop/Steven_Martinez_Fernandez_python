class pe:
    def __init__(self,n,e):
        self.n=n
        self.e=e
    def md(self):
        if self.e>=18:
            return True
        else:
            return False
    def imprimir(self):
        if self.md():
            print(f"{self.n} es mayor de edad con {self.e} años.")
        else:
            print(f"{self.n} es menor de edad con {self.e} años.")
ps=[]
for i in range(3):
    n=input(f"Introduce el nombre de la persona {i+1}: ")
    e=int(input(f"Introduce la edad de {n}: "))
    p=pe(n,e)
    ps.append(p)
for p in ps:
    p.imprimir()
